<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li><i class="fa fa-check-square-o"></i> <%= link_to task.title, task_path(task) %><%= link_to "Delete Task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% else %>
      <li><i class="fa fa-square-o"></i> <%= link_to task.title, task_path(task) %><%= link_to "Delete Task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to "Add new task", tasks_new_path %>
